<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="@color/common_google_signin_btn_text_dark_disabled">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@color/main_color_gray_lt">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_profile_icon"
                    android:id="@+id/imgUser_icon"
                    android:layout_below="@+id/imgProfile"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/userIconDes"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp" />
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUser"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@color/main_color_gray_lt">
                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/ic_email_icon"
                    android:id="@+id/imgEmail_icon"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/emailIconDes"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp" />
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imgEmail_icon"
                    android:layout_alignStart="@+id/txtUser"
                    android:id="@+id/txtEmail"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@color/main_color_gray_lt">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_telefon_icon"
                    android:id="@+id/imgTelefon_icon"
                    android:layout_below="@+id/imgEmail_icon"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/phoneIconDes"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/imgTelefon_icon"
                    android:layout_alignStart="@+id/txtEmail"
                    android:id="@+id/txtTelefon"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:background="@color/main_color_gray_lt">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location_icon"
                    android:id="@+id/imgLocation_icon"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/locationIconDes"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/imgLocation_icon"
                    android:layout_alignStart="@+id/txtTelefon"
                    android:id="@+id/txtLocation"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@color/main_color_gray_lt">




                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_radius_icon"
                    android:id="@+id/imgRadius_icon"
                    android:layout_below="@+id/imgLocation_icon"
                    android:layout_alignStart="@+id/imgLocation_icon"
                    android:contentDescription="@string/radiusIconDes"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="30dp" />
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/txtRadius"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@color/main_color_gray_lt">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_category_icon"
                    android:id="@+id/imgCategory_icon"
                    android:layout_above="@+id/btnSendRequest"
                    android:layout_alignEnd="@+id/imgRadius_icon"
                    android:contentDescription="@string/categoryIconDes"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="30dp" />
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/txtCategory"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp">
                <Button
                    android:text="@string/btnSendRequest"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/btnSendRequest"
                    android:background="@color/bg_login"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/btnChat"
                    android:text="@string/btnChat"
                    android:layout_weight="0.5"
                    android:background="@color/bg_main"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
